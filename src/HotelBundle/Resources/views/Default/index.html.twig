  </div>

  <section id = 'mp-order-form-section'>
    <div class="container">
      <div class="form-inline">
        <div class="input-group col-3">

          <input class="datepicker form-control" placeholder="Дата заезда">

          <div class="input-group-append">
            <span class="input-group-text"><span class="icon-calendar"></span></span>
          </div>
        </div>

        <div class="input-group col-3">
          <input class="datepicker form-control" placeholder="Дата выезда">
          <div class="input-group-append">
            <span class="input-group-text"><span class="icon-calendar"></span></span>
          </div>
        </div>

        <div class="input-group col-3">
          <select class="form-control" >
            <option value="">Выберите номер</option>
            {% for k, room in rooms %}
              <option value="{{ k }}">{{ room.title }}</option>
            {% endfor %}
          </select>
        </div>
        <div class="form-group col-3">
          <button  data-toggle="modal" data-target="#bookModal" type="submit" class="btn btn-primary btn-block">Забронировать</button>
        </div>

      </div>
    </div>
  </section>
</section>




<div class="row">
  {% for provider in providers %}
  <div class="col-3 text-center il-col">
      <div class="il-col-container" >
            <div class="il-col-area" style="">
                {% set image = provider.image %}
                <div data-provider-id="{{ provider.id }}" class="il-col-image image-selectable" style="background:url({{ asset(image.publicSrc) }}) no-repeat;  {{ image.width > image.height ? 'background-size: auto 100%;background-position: center;' : 'background-size: 100% auto;'  }}"></div>
            </div>
      </div>
  </div>
  {% endfor %}
  </div>

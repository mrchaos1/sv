<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>{% block title %}Admin Dashboard{% endblock %}</title>
    {% block styles %}
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css">

        <style media="screen">

            .btn { border-radius:0px; }
            .image-selectable.selected { border:2px solid red; opacity: 0.7; }
            .image-selectable:hover { opacity: 0.7; }

            .il-col { margin-bottom: 30px; }
            .il-col-container { overflow: hidden; border-radius:4px; box-shadow: 0 0px 10px 0px rgba(0, 0, 0, 0.25); }
            .il-col-area { height: 200px; position: relative; }
            .remove-icon { cursor:pointer; z-index:1; color: #777;  font: 14px/100% arial, sans-serif; position: absolute; right: 5px; text-decoration:none; text-shadow: 0 1px 0 #fff; top: 5px; }
            .remove-icon:hover { color:red; }
            .remove-icon:after {   content: 'âœ–'; }

            .il-col-description { background-color:#fff; padding:3px; }
            .il-col-image { z-index:1; }
            .il-col-background { z-index:0;  }
            .il-col-background, .il-col-image { position:absolute;width:100%;height:100%; }

        </style>


    {% endblock %}
  </head>
  <body>
      <div class="container">

          <div class="col-12">
          {% block content %}

          {% endblock %}
          </div>
      </div>
  </body>
  {% block script %}
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script type="text/javascript" src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.bundle.min.js"></script>
  <script>

      $('body').on('click', '.image-selectable', function()
      {
          var th = $(this);
          th.hasClass("selected") ? th.removeClass("selected") : th.addClass("selected");
      });
      $('body').on('click', '[data-remove]', function()
      {
          var lnk = $(this);
          $(lnk.attr("data-remove")).remove();

      });
  </script>
  {% endblock %}
</html>
